{
  "name": "advantage-scope",
  "productName": "Advantage Scope",
  "version": "2.0.0",
  "description": "Logging tool from FRC Team 6328.",
  "author": "FRC 6328",
  "license": "MIT",
  "main": "bundles/main.js",
  "scripts": {
    "compile": "rollup -c",
    "start": "npm run compile && electron bundles/main.js",
    "build": "npm run compile && electron-builder build",
    "test-build": "npm run compile && electron-builder build --dir",
    "format": "prettier --write .",
    "check-format": "prettier --check ."
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.4",
    "electron": "^20.0.0",
    "electron-builder": "^23.3.3",
    "prettier": "2.7.1",
    "rollup": "^2.78.0",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "electron-fetch": "^1.7.4",
    "jsonfile": "^6.1.0",
    "mkdirp": "^1.0.4",
    "ssh2": "^1.5.0"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "none"
  },
  "build": {
    "appId": "org.littletonrobotics.advantagescope",
    "copyright": "Copyright Â© 2021-2022 FRC 6328",
    "npmRebuild": false,
    "publish": [],
    "files": [
      "www/**/*",
      "bundles/**/*",
      "games/**/*",
      "icons/**/*",
      "!**/.*"
    ],
    "fileAssociations": [
      {
        "ext": "rlog",
        "name": "Robot log",
        "description": "Robot log",
        "mimeType": "application/octet-stream",
        "role": "Viewer",
        "icon": "icons/app/rlog-icon"
      },
      {
        "ext": "wpilog",
        "name": "Robot log",
        "description": "Robot log",
        "mimeType": "application/octet-stream",
        "role": "Viewer",
        "icon": "icons/app/wpilog-icon"
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "icons/app/app-icon.icns"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "pacman"
      ],
      "icon": "icons/app/app-icon.icns",
      "maintainer": "FRC 6328",
      "category": "Utility"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/app/app-icon.ico"
    }
  }
}
